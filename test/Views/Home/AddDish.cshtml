<!-- Views/Home/AddDish.cshtml -->
@model YourNamespace.Models.Dish

@{
    ViewData["Title"] = "Додати страву";
}

<h1>Додати нову страву</h1>

<form asp-action="AddDish" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category" class="form-control">
            <option value="Закуска">Закуска</option>
            <option value="Салат">Салат</option>
            <option value="Гаряча страва">Гаряча страва</option>
            <option value="Гарнір">Гарнір</option>
            <option value="Десерт">Десерт</option>
            <option value="Бенкетна страва">Бенкетна страва</option>
            <option value="Напій">Напій</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Додати страву</button>
</form>
