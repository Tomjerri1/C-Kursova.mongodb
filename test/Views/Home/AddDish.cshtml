@model YourNamespace.Models.Dish

<h2>Add Dish</h2>

<form asp-action="AddDish" method="post">
    <div class="form-group">
        <label asp-for="Name">Назва страви</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Категорія</label>
        <select asp-for="Category" class="form-control">
            <option value="">Оберіть категорію</option>
            <option value="Закуска">Закуска</option>
            <option value="Салат">Салат</option>
            <option value="Гаряча страва">Гаряча страва</option>
            <option value="Гарнір">Гарнір</option>
            <option value="Десерт">Десерт</option>
            <option value="Бенкетна страва">Бенкетна страва</option>
            <option value="Напій">Напій</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Ціна</label>
        <input type="number" asp-for="Price" class="form-control" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Додати страву</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
