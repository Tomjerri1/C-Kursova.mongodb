@model YourNamespace.Models.Table

<h2>Додати новий столик</h2>

<form asp-action="AddTable" method="post">
    <div class="form-group">
        <label asp-for="TableNumber">Номер столика</label>
        <input asp-for="TableNumber" class="form-control" />
        <span asp-validation-for="TableNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Додати столик</button>
    <a asp-controller="Home" asp-action="Administrator" class="btn btn-secondary">Назад</a>
</form>
