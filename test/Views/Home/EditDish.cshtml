@model YourNamespace.Models.Dish

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Назва страви</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Категорія</label>
        <input type="text" asp-for="Category" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Price">Ціна</label>
        <input type="number" asp-for="Price" class="form-control" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
    <a asp-action="ManageDishes" class="btn btn-secondary">Відмінити</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
