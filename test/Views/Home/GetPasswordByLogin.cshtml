<h2>Відновити пароль</h2>

<form asp-action="GetPasswordByLogin" asp-controller="Employees" method="post">
    <label for="login">Логін:</label>
    <input type="text" id="login" name="login" required />
    <button type="submit">Отримати пароль</button>
</form>

@if (ViewBag.Password != null)
{
    <p><strong>Пароль:</strong> @ViewBag.Password</p>
}
else if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад</a>