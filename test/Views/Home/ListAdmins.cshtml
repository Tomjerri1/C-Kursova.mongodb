@model List<YourNamespace.Models.Employee>

<h2>Title</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ім'я</th>
            <th>Прізвище</th>
            <th>Роль</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.FirstName</td>
                <td>@admin.LastName</td>
                <td>@admin.Role</td>
                <td>
                    <a href="@Url.Action("DeleteEmployee", "Employees", new { id = admin.Id })" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад</a>