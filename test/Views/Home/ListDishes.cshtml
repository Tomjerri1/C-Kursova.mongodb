@model IEnumerable<YourNamespace.Models.Dish>

@{
    ViewData["Title"] = "Список страв";
}
<form method="get">
    <input type="text" name="searchQuery" placeholder="Пошук страви..." />
    <button type="submit">Пошук</button>
</form>
<h1>Список страв</h1>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Категорія</th>
            <th>Ціна (грн)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Category</td>
                <td>@dish.Price</td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад</a>