@model YourNamespace.Models.Employee

<h2>Реєстрація працівника</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role">
            <option value="">--Виберіть роль--</option>
            <option value="Waiter">Офіціант</option>
            <option value="Administrator">Адміністратор</option>
        </select>
        <span asp-validation-for="Role"></span>
    </div>

    <div id="workingDays" style="display:none;">
        <label>Дні роботи:</label><br />
        <input type="checkbox" name="WorkingDays" value="Monday" /> Понеділок<br />
        <input type="checkbox" name="WorkingDays" value="Tuesday" /> Вівторок<br />
        <input type="checkbox" name="WorkingDays" value="Wednesday" /> Середа<br />
        <input type="checkbox" name="WorkingDays" value="Thursday" /> Четвер<br />
        <input type="checkbox" name="WorkingDays" value="Friday" /> П'ятниця<br />
        <input type="checkbox" name="WorkingDays" value="Saturday" /> Субота<br />
    </div>

    <div>
        <label asp-for="Login"></label>
        <input asp-for="Login" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit">Зареєструвати</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    <script>
        document.querySelector('select[name="Role"]').addEventListener('change', function() {
            const workingDaysDiv = document.getElementById('workingDays');
            if (this.value === 'Waiter') {
                workingDaysDiv.style.display = 'block';
            } else {
                workingDaysDiv.style.display = 'none';
            }
        });
    </script>
}
